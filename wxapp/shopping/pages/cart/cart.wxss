/* pages/cart/cart.wxss */
.cart-box{
  padding-bottom: 100rpx;
}
.cart-list{
  position: relative;
  padding: 20rpx 20rpx 20rpx 285rpx;
  height: 185rpx;
  border-bottom: 1px solid #e9e9e9;
}
.cart-pro-select{
 position: absolute;
 left: 20rpx;
 top: 90rpx;
 width: 45rpx;
 height: 45rpx;
}
.cart-pro-goods{
  position: absolute;
  left: 85rpx;
}
.cart-thumb{
  width: 185rpx;
  height: 185rpx;
}
.cart-pro-name{
  display: inline-block;
  width: 300rpx;
  height: 105rpx;
  line-height: 50rpx;
  overflow: hidden;
}
.cart-pro-price{
  float: right;
  height: 105px;
}
.cart-count-box{
  position: absolute;
  left: 285rpx;
  bottom: 20rpx;
  width: 250rpx;
  height: 80rpx;
}
.cart-count-box text{
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
}
.cart-count-down,
.cart-count-add
{
  font-size: 44rpx;
  width: 50rpx;
  height: 100%;
}
.cart-count-num{
  width: 150rpx;
}
.cart-del{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-style: 44rpx;
}
.cart-footer{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  background: #AB956D;
  position: fixed;
  left: 0;
  bottom: 0;
}
.total-select,
.cart-footer text{
  vertical-align: top;
  color: #fff;
  margin-left: 6rpx;
}
.return_pic{
  display: inline-block;
  vertical-align: middle;
  width: 32rpx;
  height: 32rpx;
}
.return_pic image{
  width: 100%;
  height: 100%;
}
.cart-total-price{
  margin-right: 400rpx;
}
