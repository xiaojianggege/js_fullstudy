*
 margin 0
 padding 0

html,body
 font-size 30px

section
 margin-bottom .667rem
 background #ffffff
 border-radius 10px
 overflow hidden

.card
    padding 1rem
    background #f5fafe
    &-wrapper 
        width 100%
        .user-info
            width 100%
            font-size 0
            &__pic
                width 100%
                img 
                 width 100%
                
            &__desc
                padding 0.333rem 0.667rem
                .name
                    font-size 1rem
                    color #010101
                    .sex
                        display inline-block
                        width .67rem
                        height .6rem
                        background-image url("./img/sexw.png")
                        background-size cover


                    
                 
